def login():
  admin = input("What is your UserID")
  if admin == "deusopus":
    print("Welcome, Brent")
    i = 1
    while i < 4:
      password = input("Input your password, please: ")
      if password == "password":
        print ("Welcome to the Machine")
        break
      elif password != "password":
        i += 1
        if i < 4:
          print ("Try again")
        elif i == 4:
          print ("Access Denied")
          print ("loading Disney.com...")
  else:
    print ("Invalid UserID")
    print ("loading Disney.com...")
  return
login()
